  <div class='row'>
    <div class='buttons-nav'>
      <%= form_tag users_feed_path, method: 'get' do %>
      <div class='small-12 large-6 columns'>
        <div class='row collapse'>
          <div class='small-10 large-10 columns'>
            <%= select_tag :month, options_for_select((month_options), params[:month]) %>
          </div>
          <div class='small-2 large-2 columns'>
            <%= submit_tag 'GO', class: 'button postfix' %>
          </div>
      <% end %>
        </div>
      </div>
      <div class='small-12 large-6 columns'>
        <% link_to "Year", "#", class: "button large", data: { dropdown: 'dropdown-years' } %>
        <ul id="dropdown-years" class="medium content f-dropdown content" data-dropdown-content>
          <% @years.each do |year| %>
          <li id='year-selector'><%= link_to year, '#' %></li>
          <% end %>
      </div>
    </div>
  </div>
